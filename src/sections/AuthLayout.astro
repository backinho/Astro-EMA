---
import LoginForm from '../components/form/LoginForm.astro';
import RecoveryForm from '../components/form/RecoveryForm.astro';
import ToogleButton from '../tools/ToogleButton.astro';
---


<main>
    <!-- Background Pattern -->
    <div class="fixed inset-0 w-full h-full -z-10 bg-linear-to-br from-(--primary-color) to-(--accent-color)">
        <div class="absolute inset-0 w-full h-full auth-pattern"></div>
    </div>

    <!-- Main Auth Container -->
    <div class="min-h-screen flex items-center justify-center relative px-(--spacing-lg)">
        <!-- Auth Card -->
        <div class="w-full max-w-[480px] overflow-hidden rounded-2xl bg-(--bg-primary) border border-(--border-color) shadow-(--shadow-xl) backdrop-blur-[20px] transition-all duration-(--transition-medium) hover-lift hover:shadow-[0_25px_50px_-12px_rgba(0,0,0,0.25)] dark:bg-[rgba(15,23,42,0.95)] dark:border-[rgba(255,255,255,0.1)]">
            <!-- Logo Section -->
            <div class="text-center px-(--spacing-2xl) pt-(--spacing-2xl) pb-(--spacing-lg) border-b border-(--border-color) bg-[linear-gradient(135deg,rgba(59,130,246,0.05),rgba(16,185,129,0.05))] group">
                <div class="logo-icon mx-auto mb-(--spacing-lg) w-16 h-16 flex items-center justify-center rounded-xl bg-[linear-gradient(135deg,var(--primary-color),var(--primary-dark))] shadow-(--shadow-lg) transition-transform duration-(--transition-fast) hover-logo-lift">     
                    <img src="/public/logo-solo-white.webp" alt="Logo-Icon-EMA" class="w-10 h-10" />
                </div>
                <div class="text-[1.75rem] font-bold text-(--text-primary) mb-(--spacing-xs)">
                    System EMA
                </div>
            </div>

            <!-- Auth Form -->
            <div class="p-(--spacing-2xl)">
                <div id="loginDiv" style="display: block;" class="">
                    <LoginForm />
                </div>
                <div id="recoveryDiv" style="display: none;" class="">
                    <RecoveryForm />
                </div>
            </div>
        </div>

        <!-- Toogle Button -->
        <ToogleButton />
    </div>
</main>

<style>
    body {
        font-family: "Inter", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
        line-height: 1.6;
        color: var(--text-primary);
        background-color: var(--bg-secondary);
        overflow-x: hidden;
        transition: background-color var(--transition-medium), color var(--transition-medium);
    }

    .auth-pattern {
        background-image:
            radial-gradient(circle at 25% 25%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
            radial-gradient(circle at 75% 75%, rgba(255, 255, 255, 0.1) 0%, transparent 50%);
        animation: float 20s ease-in-out infinite;
    }

    .hover-lift {
        transition: all 0.5s ease-out;
        transform: translateY(0);
    }

    .hover-lift:hover {
        transform: translateY(-5px);
    }

    .hover-logo-lift {
        transition: all 0.5s ease-out;
        transform: scale(1.00);
    }

    .hover-lift:hover .hover-logo-lift {
        transform: scale(1.05);
    }

    @keyframes float {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-10px); }
    }
</style>
