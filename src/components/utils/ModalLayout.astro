---
import ProductForm from "../form/ProductForm.astro";
import CategoryForm from "../form/CategoryForm.astro";
import ProductDetails from "../form/ProductDetails.astro";
import ProveedorForm from "../form/proveedorForm.astro";
import EntryForm from "../form/EntryForm.astro";

interface Props {
    title: string;
    modalId: string;
    form: string;
    type: string;
    buttons: string;
}

const { title, modalId, form, type, buttons } = Astro.props as Props;

const modalType = type === "large" ? "modal modal-large" : "modal";

const formSection: Record<string, any> = {
    productForm: ProductForm,
    categoryForm: CategoryForm,
    productDetailsForm: ProductDetails,
    proveedorForm: ProveedorForm,
    entryForm: EntryForm,
};

const FormSection = formSection[form];
---

<div class="modal-overlay" id={modalId}>
    <div class={modalType}>
        <div class="modal-header">
            <h2 class="modal-title">{title}</h2>
            <button class="modal-close" id={`closeModal-${modalId}`}>
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <line x1="18" y1="6" x2="6" y2="18"></line>
                    <line x1="6" y1="6" x2="18" y2="18"></line>
                </svg>
            </button>
        </div>
        <div class="modal-body"><FormSection /></div>
        <div class="modal-footer" id={`modalFooter-${modalId}`}></div>
    </div>
</div>

<script define:vars={{ modalId, type, form, buttons }}>
    const modalFooter = document.getElementById(`modalFooter-${modalId}`);

    console.log(type);
    if (buttons === "double") {
        modalFooter.innerHTML = `
            <button
                type="button"
                class="btn btn-secondary"
                id="cancelModalBtn-${modalId}">Cancelar</button>
            <button
                type="submit"
                form="${form}"
                class="btn btn-primary"
                id="saveModalBtn-${modalId}">Guardar</button>
        `;
    } else if (buttons === "single") {
        modalFooter.innerHTML = `
            <button
                type="button"
                class="btn btn-secondary"
                id="cancelModalBtn-${modalId}">Cerrar</button>
        `;
    }

    document
        .getElementById(`closeModal-${modalId}`)
        ?.addEventListener("click", () => {
            document.getElementById(modalId)?.classList.remove("active");
        });

    document
        .getElementById(`cancelModalBtn-${modalId}`)
        ?.addEventListener("click", () => {
            document.getElementById(modalId)?.classList.remove("active");
        });

    const modalElement = document.getElementById(modalId);
    if (modalElement) {
        modalElement.addEventListener("click", (event) => {
            if (event.target === modalElement) {
                modalElement.classList.remove("active");
            }
        });
    }
</script>

<style is:global>
    /* Modal Styles */
    .modal-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 2000;
        opacity: 0;
        visibility: hidden;
        transition: all var(--transition-medium);
        backdrop-filter: blur(4px);
    }

    .modal-overlay.active {
        opacity: 1;
        visibility: visible;
    }

    .modal {
        background: var(--bg-primary);
        border-radius: var(--radius-2xl);
        box-shadow: var(--shadow-xl);
        width: 90%;
        max-width: 600px;
        max-height: 90vh;
        overflow: hidden;
        transform: scale(0.9) translateY(20px);
        transition: all var(--transition-medium);
        border: 1px solid var(--border-color);
    }

    .modal-overlay.active .modal {
        transform: scale(1) translateY(0);
    }

    .modal-large {
        max-width: 900px;
    }

    .modal-sm {
        max-width: 400px;
    }

    .modal-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: var(--spacing-lg);
        border-bottom: 1px solid var(--border-color);
    }

    .modal-title {
        font-size: 1.25rem;
        font-weight: 600;
        color: var(--text-primary);
    }

    .modal-close {
        width: 32px;
        height: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: none;
        border: none;
        border-radius: var(--radius-md);
        cursor: pointer;
        color: var(--text-muted);
        transition: all var(--transition-fast);
    }

    .modal-close:hover {
        background-color: var(--bg-secondary);
        color: var(--text-primary);
    }

    .modal-close svg {
        width: 16px;
        height: 16px;
        stroke-width: 2;
    }

    .modal-body {
        padding: var(--spacing-lg);
        max-height: calc(85vh - 140px);
        overflow-y: auto;
    }

    .modal-footer {
        display: flex;
        justify-content: flex-end;
        gap: var(--spacing-md);
        padding: var(--spacing-lg);
        border-top: 1px solid var(--border-color);
        background-color: var(--bg-secondary);
    }
</style>
