<div id="product-grid"></div>

<script>
    import { actions } from "astro:actions";

    const inventario = await actions.inventario.getInventario();

    console.log(inventario.data?.data);

    const products = inventario.data?.data;

    renderProducts(products || []);

    interface Categoria {
        name: string;
    }

    interface ArticuloCategoria {
        categoria: Categoria;
    }

    interface ArticuloImagen {
        image: string;
        order: number;
    }

    interface Product {
        idarticulo: number;
        name: string;
        code: string;
        price: number | string | null;
        stock: number | null;
        articulo_imagen: ArticuloImagen[];
        articulo_categoria: ArticuloCategoria[];
    }

    function getDefaultImage() {
        return "/public/default-product.png";
    }

    function getStatusFromStock(stock: number) {
        if (stock === 0) return "Sin Stock";
        if (stock <= 5) return "Bajo Stock";
        return "Activo";
    }

    function renderProducts(products: Product[]) {
        const grid = document.getElementById("product-grid");

        if (!grid) {
            console.error(
                "No se encontró el elemento con el ID 'product-grid'",
            );
            return;
        }

        if (!products || products.length === 0) {
            grid.innerHTML = `
                    <div class="no-products">
                        <svg class="no-products-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <circle cx="12" cy="12" r="10"></circle>
                            <path d="m9 9 3 3m0 0 3-3m-3 3V8m0 9v1"></path>
                        </svg>
                        <h3>No se encontraron productos</h3>
                        <p>Prueba ajustando los filtros o agrega un nuevo producto.</p>
                    </div>
                `;
            return;
        }

        grid.innerHTML = products
            .map((product) => {
                if (!product) return;

                const images = product.articulo_imagen[0].image;
                const category = product.articulo_categoria[0].categoria.name;

                return `
                    <div class="product-card" data-product-id="${product.idarticulo}">
                        <div class="product-image">
                            <img src="${Array.isArray(images) ? images : images}" 
                                alt="${product.name}" 
                                onerror="this.src='${getDefaultImage()}'">
                            <div class="product-status status-${getStatusFromStock(
                                product.stock ?? 0,
                            )
                                .toLowerCase()
                                .replace(" ", "-")}">
                                ${getStatusFromStock(product.stock ?? 0)}
                            </div>
                            <div class="product-actions">
                                <button class="product-action-btn product-view-btn" onclick="viewProductDetails(${product.idarticulo})" data-tooltip="Ver detalles">
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                        <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                                        <circle cx="12" cy="12" r="3"></circle>
                                    </svg>
                                </button>
                                <button class="product-action-btn product-edit-btn" onclick="editProduct(${product.idarticulo})" data-tooltip="Editar">
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                        <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                                        <path d="M18.5 2.5a2.12 2.12 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                                    </svg>
                                </button>
                            </div>
                        </div>
                        <div class="product-info">
                            <h3 class="product-name">${product.name}</h3>
                            <p class="product-code">Código: ${product.code}</p>
                            <p class="product-category">${category || "Sin categoría"}</p>
                            <div class="product-footer">
                                <div class="product-price">$${Number(product.price ?? 0).toFixed(2)}</div>
                                <div class="product-stock">
                                    <span class="stock-label">Stock:</span>
                                    <span class="stock-value ${(product.stock ?? 0) <= 5 ? "low-stock" : ""}">${product.stock ?? 0}</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    `;
            })
            .join("");
    }
</script>

