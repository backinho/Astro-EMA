<div
    id="product-grid"
    class="grid grid-cols-[repeat(auto-fill,minmax(300px,1fr))] gap-(--spacing-lg) mb-(--spacing-2xl)"
>
</div>

<script>
    import { actions } from "astro:actions";

    const inventario = await actions.inventario.getInventario();

    const products = inventario.data?.data || [];

    console.log("Productos obtenidos:", products);

    renderProducts(products || []);

    interface Categoria {
        name: string;
        idcategoria: string | number;
    }

    interface ArticuloCategoria {
        categoria: Categoria;
    }

    interface ArticuloImagen {
        image: string;
        order: number;
    }

    interface Product {
        idarticulo: number;
        name: string;
        code: string;
        price: number | string | null;
        stock: number | null;
        articulo_imagen: ArticuloImagen[];
        articulo_categoria: ArticuloCategoria[];
    }

    function getDefaultImage() {
        return "/public/default-product.png";
    }

    function getStatusFromStock(stock: number) {
        if (stock === 0) return "Sin Stock";
        if (stock <= 5) return "Bajo Stock";
        return "Activo";
    }

    function renderProducts(products: Product[]) {
        const grid = document.getElementById("product-grid") as HTMLDivElement;

        if (!grid) {
            console.error(
                "No se encontró el elemento con el ID 'product-grid'",
            );
            return;
        }

        if (!products || products.length === 0) {
            grid.innerHTML = `
                    <div class="no-products">
                        <svg class="no-products-icon" fill="none" stroke="currentColor"  xmlns="http://www.w3.org/2000/svg" id="Layer_1" data-name="Layer 1" viewBox="-1 -1 27 27" preserveAspectRatio="xMidYMid meet">
                            <path d="m24.008,23.3l-6.598-6.597c1.607-1.775,2.596-4.12,2.596-6.697C20.006,4.492,15.52.006,10.006.006S.006,4.492.006,10.006s4.486,10,10,10c2.577,0,4.922-.989,6.697-2.596l6.598,6.597.707-.707ZM1.006,10.006C1.006,5.043,5.043,1.006,10.006,1.006s9,4.038,9,9-4.037,9-9,9S1.006,14.968,1.006,10.006Zm12.947-3.252l-3.247,3.246,3.247,3.246-.707.707-3.247-3.246-3.247,3.246-.707-.707,3.247-3.246-3.247-3.246.707-.707,3.247,3.246,3.247-3.246.707.707Z"/>
                        </svg>
                        <h3>No se encontraron productos</h3>
                        <p>Prueba ajustando los filtros o agrega un nuevo producto.</p>
                    </div>
                `;
            return;
        }

        grid.innerHTML = products
            .map((product) => {
                if (!product) return;

                const images = product.articulo_imagen[0].image;
                const category = product.articulo_categoria[0].categoria.name;

                return `
                    <div class="product-card" data-product-id="${product.idarticulo}">
                        <div class="product-image">
                            <img src="${Array.isArray(images) ? images : images}" 
                                alt="${product.name}" 
                                onerror="this.src='${getDefaultImage()}'">
                            <div class="product-status status-${getStatusFromStock(
                                product.stock ?? 0,
                            )
                                .toLowerCase()
                                .replace(" ", "-")}">
                                ${getStatusFromStock(product.stock ?? 0)}
                            </div>
                            <div class="product-actions">
                                <button class="product-action-btn product-view-btn" id="viewProduct-${product.idarticulo}" data-id="${product.idarticulo}" data-tooltip="Ver detalles">
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                        <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                                        <circle cx="12" cy="12" r="3"></circle>
                                    </svg>
                                </button>
                                <button class="product-action-btn product-edit-btn" id="editProduct-${product.idarticulo}" data-id="${product.idarticulo}" data-tooltip="Editar">
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                        <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                                        <path d="M18.5 2.5a2.12 2.12 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                                    </svg>
                                </button>
                                <button class="product-action-btn product-delete-btn" id="editProduct-${product.idarticulo}" data-id="${product.idarticulo}" data-tooltip="Editar">
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                        <circle cx="12" cy="12" r="10"></circle>
                                        <line x1="15" y1="9" x2="9" y2="15"></line>
                                        <line x1="9" y1="9" x2="15" y2="15"></line>
                                    </svg>
                                </button>
                            </div>
                        </div>
                        <div class="product-info">
                            <h3 class="product-name">${product.name}</h3>
                            <p class="product-code">Código: ${product.code}</p>
                            <p class="product-category">${category || "Sin categoría"}</p>
                            <div class="product-footer">
                                <div class="product-price">$${Number(product.price ?? 0).toFixed(2)}</div>
                                <div class="product-stock">
                                    <span class="stock-label">Stock:</span>
                                    <span class="stock-value ${(product.stock ?? 0) <= 5 ? "low-stock" : ""}">${product.stock ?? 0}</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    `;
            })
            .join("");

        attachProductCardEvents();
    }

    function filterProducts() {
        const searchInput = document.getElementById(
            "filterSearch",
        ) as HTMLInputElement;
        const categorySelect = document.getElementById(
            "filterCategory",
        ) as HTMLSelectElement;
        const statusSelect = document.getElementById(
            "filterStatus",
        ) as HTMLSelectElement;

        const searchTerm = searchInput?.value.toLowerCase().trim() || "";
        const selectedCategory = categorySelect?.value || "";
        const selectedStatus = statusSelect?.value || "";

        const filtered = (products || []).filter((product) => {
            const matchesSearch =
                !searchTerm ||
                product.name.toLowerCase().includes(searchTerm) ||
                product.code.toLowerCase().includes(searchTerm);

            // Filtro de Categoría
            const productCategory =
                product.articulo_categoria[0]?.categoria?.name || "";
            const matchesCategory =
                !selectedCategory ||
                (product.articulo_categoria.length > 0 &&
                    // Compara con el idcategoria que es el 'value' del select en InventarioLayout
                    product.articulo_categoria.some(
                        (ac: ArticuloCategoria) =>
                            ac.categoria.idcategoria.toString() ===
                            selectedCategory,
                    ));

            // Filtro de Estado
            const productStatus = getStatusFromStock(product.stock ?? 0);
            const matchesStatus =
                !selectedStatus || productStatus === selectedStatus;

            return matchesSearch && matchesCategory && matchesStatus;
        });

        renderProducts(filtered);
    }

    function attachProductCardEvents() {
        document.querySelectorAll(".product-view-btn").forEach((button) => {
            button.addEventListener("click", () => {
                const productId = parseInt(
                    button.getAttribute("data-id") || "0",
                );
                viewProductDetails(productId);
            });
        });

        document.querySelectorAll(".product-edit-btn").forEach((button) => {
            button.addEventListener("click", () => {
                const productId = parseInt(
                    button.getAttribute("data-id") || "0",
                );
                editProduct(productId);
            });
        });

        document.querySelectorAll(".product-delete-btn").forEach((button) => {
            button.addEventListener("click", async () => {
                const productId = parseInt(
                    button.getAttribute("data-id") || "0",
                );

                const confirmDelete = confirm(
                    "¿Estás seguro de que deseas eliminar este producto?",
                );
                if (!confirmDelete) return;

                const { data, error } = await actions.inventario.deleteProduct({
                    productId: productId,
                });

                if (error) {
                    console.error("Error al eliminar el producto:", error);
                    return;
                }

                console.log("Producto eliminado exitosamente:", data);

                filterProducts();
            });
        });
    }

    function viewProductDetails(productId: number) {
        console.log("Ver detalles del producto ID:", productId);
        const modal = document.getElementById("productDetailsModal");
        if (modal) {
            const detailEvent = new CustomEvent("productDetailRequested", {
                detail: { productId: productId },
            });
            document.dispatchEvent(detailEvent);
            modal.classList.add("active");
        }
    }

    function editProduct(productId: number) {
        console.log("Editar producto ID:", productId);
        const modal = document.getElementById("productModal");
        if (modal) {
            modal.classList.add("active");
            const productEdit = products.find(
                (p) => p.idarticulo === productId,
            );

            if (productEdit) {
                const editEvent = new CustomEvent("productEditRequested", {
                    detail: { product: productEdit },
                });
                document.dispatchEvent(editEvent);

                (
                    document.getElementById("productId") as HTMLInputElement
                ).value = productEdit.idarticulo.toString();
                (
                    document.getElementById("productName") as HTMLInputElement
                ).value = productEdit.name;
                (
                    document.getElementById("productCode") as HTMLInputElement
                ).value = productEdit.code;
                (
                    document.getElementById(
                        "productCategory",
                    ) as HTMLSelectElement
                ).value =
                    productEdit.articulo_categoria[0]?.categoria.idcategoria.toString() ||
                    "";
                (
                    document.getElementById("productState") as HTMLSelectElement
                ).value = productEdit.status ? "1" : "0";
                (
                    document.getElementById(
                        "productDescription",
                    ) as HTMLTextAreaElement
                ).value = productEdit.description || "";
            }
        }
    }

    declare global {
        interface Window {
            filterProducts: () => void;
        }
    }

    window.filterProducts = filterProducts;
</script>
<script is:inline>
    document.addEventListener("DOMContentLoaded", () => {
        const searchInput = document.getElementById("filterSearch");
        const categorySelect = document.getElementById("filterCategory");
        const statusSelect = document.getElementById("filterStatus");
        const clearButton = document.querySelector(
            "button.p-\\(--spacing-sm\\).px-\\(--spacing-md\\)",
        );

        if (searchInput) {
            searchInput.addEventListener("input", () => {
                console.log("Búsqueda cambiada");
                filterProducts();
            });
        }
        if (categorySelect) {
            categorySelect.addEventListener("change", () => {
                console.log("Categoría seleccionada cambiada");
                filterProducts();
            });
        }
        if (statusSelect) {
            statusSelect.addEventListener("change", () => {
                console.log("Estado seleccionado cambiado");
                filterProducts();
            });
        }
        if (clearButton) {
            clearButton.addEventListener("click", (e) => {
                e.preventDefault();
                if (searchInput) searchInput.value = "";
                if (categorySelect) categorySelect.value = ""; // Todas las categorías
                if (statusSelect) statusSelect.value = ""; // Todos los estados
                filterProducts();
            });
        }
    });
</script>

