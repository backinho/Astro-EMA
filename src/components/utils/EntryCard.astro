<div
  id="entry-grid"
  class="grid grid-cols-[repeat(auto-fill,minmax(350px,1fr))] gap-(--spacing-lg) mb-(--spacing-2xl)"
>
</div>

<script>
  import { actions } from "astro:actions";

  const entries = await actions.entrada.getEntries();

  const entry = entries.data?.data || [];

  console.log("Entries obtenidos:", entry);

  renderEntries(entry || []);

  interface Entry {
    identrada: number;
    entry_date: Date;
    receipt_type: string;
    receipt_number: number;
    purchase_total: number;
    articulo_entrada: ArticuloEntrada[];
    proveedor: Proveedor;
  }

  interface ArticuloEntrada {
    articulo: Articulo;
    idarticulo_entrada: number;
    idarticulo: number;
    cantidad: number;
    purchase_price: number;
    sale_price: number;
  }

  interface Proveedor {
    idpersona: number;
    nombre: string;
    tipo_documento: string;
    nro_documento: number;
  }

  interface Articulo {
    code: string;
    description: string;
    name: string;
    price: number;
    stock: number;
  }

  function formatDate(dateString: Date) {
    const date = new Date(dateString);
    return date.toLocaleDateString("es-ES", {
      year: "numeric",
      month: "long",
      day: "numeric",
    });
  }

  function renderEntries(entries: Entry[]) {
    const grid = document.getElementById("entry-grid") as HTMLDivElement;

    if (!grid) {
      console.error("No se encontró el elemento con el ID 'entry-grid");
      return;
    }

    if (!entries || entries.length === 0) {
      grid.innerHTML = `
                    <div class="no-products">
                        <svg class="no-products-icon" fill="none" stroke="currentColor"  xmlns="http://www.w3.org/2000/svg" id="Layer_1" data-name="Layer 1" viewBox="-1 -1 27 27" preserveAspectRatio="xMidYMid meet">
                            <path d="m24.008,23.3l-6.598-6.597c1.607-1.775,2.596-4.12,2.596-6.697C20.006,4.492,15.52.006,10.006.006S.006,4.492.006,10.006s4.486,10,10,10c2.577,0,4.922-.989,6.697-2.596l6.598,6.597.707-.707ZM1.006,10.006C1.006,5.043,5.043,1.006,10.006,1.006s9,4.038,9,9-4.037,9-9,9S1.006,14.968,1.006,10.006Zm12.947-3.252l-3.247,3.246,3.247,3.246-.707.707-3.247-3.246-3.247,3.246-.707-.707,3.247-3.246-3.247-3.246.707-.707,3.247,3.246,3.247-3.246.707.707Z"/>
                        </svg>
                        <h3>No se encontraron entradas</h3>
                        <p>Prueba ajustando los filtros o agrega un nuevo producto.</p>
                    </div>
                `;
      return;
    }

    grid.innerHTML = entries
      .map((entry) => {
        if (!entry) return "";

        console.log(entry);
        return `
        <div class="entry-card" data-entry-id="${entry.identrada}">
            <div class="entry-header">
                <div class="entry-info">
                    <h3 class="entry-supplier">${entry.proveedor?.nombre || "Sin proveedor"}</h3>
                    <p class="entry-date">${formatDate(entry.entry_date)}</p>
                </div>
                <div class="entry-status status-completado">
                    Completado
                </div>
            </div>
            
            <div class="entry-receipt">
                <div class="receipt-info">
                    <span class="receipt-type">${entry.receipt_type}</span>
                    <span class="receipt-number">${entry.receipt_number}</span>
                </div>
            </div>

            <div class="entry-items">
                <div class="items-summary">
                    <span>${entry.articulo_entrada.length} producto(s)</span>
                </div>
                <div class="items-list">
                  ${entry.articulo_entrada
                    .slice(0, 2) // Primero cortamos los primeros 2 elementos del arreglo principal [cite: 17]
                    .map((item) => {
                      // Accedemos al primer elemento del arreglo 'articulo' dentro de cada entrada
                      const product = item.articulo;
                      return `
                        <div class="entry-item">
                          <div class="item-info">
                            <div class="item-name">${product?.name || "Sin nombre"}</div>
                            <div class="item-details">Cant: ${item.cantidad}</div>
                          </div>
                          <div class="item-total">$${(item.purchase_price * item.cantidad).toFixed(2)}</div>
                        </div>
                      `;
                    })
                    .join("")}
                  ${
                    entry.articulo_entrada.length > 2
                      ? `<div class="entry-item">
                            <div class="item-info">
                                <div class="item-name">... y ${entry.articulo_entrada.length - 2} más</div>
                            </div>
                        </div>`
                      : ""
                  }
                </div>
            </div>

            <div class="sale-footer">
                <div class="sale-total">$${Number(entry.purchase_total).toFixed(2)}</div>
                <div class="sale-actions">
                    <button class="action-btn view-btn" onclick="viewEntryDetails(${entry.identrada})" data-tooltip="Ver detalles">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                            <circle cx="12" cy="12" r="3"></circle>
                        </svg>
                    </button>
                    <button class="action-btn delete-btn" onclick="deleteEntry(${entry.identrada})" data-tooltip="Eliminar">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <polyline points="3,6 5,6 21,6"></polyline>
                            <path d="M19,6V20a2,2,0,0,1-2,2H7a2,2,0,0,1-2-2V6M8,6V4a2,2,0,0,1,2-2h4a2,2,0,0,1,2,2V6"></path>
                        </svg>
                    </button>
                </div>
            </div>
        </div>
      `;
      })
      .join("");
  }
</script>

