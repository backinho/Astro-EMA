<div class="categories-list">
    <div class="flex justify-between items-center py-4">
        <h3>Categorías Existentes</h3>
        <button
            type="button"
            class="btn btn-sm btn-primary"
            id="addNewCategoryBtn">Agregar</button
        >
    </div>
    <ul id="categoriesList" class="categories-items">
        <!-- Las categorías se mostrarán aquí -->
    </ul>
</div>

<script>
    document
        .getElementById("addNewCategoryBtn")
        ?.addEventListener("click", () => {
            document
                .getElementById("subCategoryModal")
                ?.classList.add("active");
        });
</script>

<script>
    import { actions } from "astro:actions";

    let categoryList = [];

    declare global {
        interface Window {
            updateCategoriesList: () => Promise<void>;
            categoryList: any[];
        }
    }

    async function fetchRenderCategories() {
        const { data: categoriesData } =
            await actions.inventario.getCategories();

        categoryList = categoriesData?.data || [];

        console.log(categoryList);

        renderCategories(categoryList);

        window.categoryList = categoryList;
    }

    fetchRenderCategories();

    window.updateCategoriesList = fetchRenderCategories;

    interface Categories {
        name: string;
        idcategoria: number;
    }

    function renderCategories(categories: Categories[]) {
        const grid = document.getElementById("categoriesList");

        if (!grid) {
            console.error(
                "No se encontró el elemento con el ID 'categoriesList'",
            );
            return;
        }

        if (!categories || categories.length === 0) {
            grid.innerHTML = `
                    <div class="no-categories">
                        <svg class="no-categories-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <circle cx="12" cy="12" r="10"></circle>
                            <path d="m9 9 3 3m0 0 3-3m-3 3V8m0 9v1"></path>
                        </svg>
                        <h3>No se encontraron categorías</h3>
                        <p>Prueba ajustando los filtros o agrega una nueva categoría.</p>
                    </div>
                `;
            return;
        }

        grid.innerHTML = categories
            .map((category) => {
                if (!category) return;

                return `
                    <div class="position-item" data-cargo-id="${category.idcategoria}">
                        <div class="position-info">
                            <span class="position-name">${category.name}</span>
                        </div>
                        <div class="position-actions">
                            <button class="category-action-btn category-edit-btn" data-id="${category.idcategoria}" title="Editar" data-tooltip="Editar">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                                <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                                </svg>
                            </button>
                            <button class="category-action-btn category-delete-btn" data-id="${category.idcategoria}" title="Eliminar" data-tooltip="Eliminar">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                <circle cx="12" cy="12" r="10"></circle>
                                <line x1="15" y1="9" x2="9" y2="15"></line>
                                <line x1="9" y1="9" x2="15" y2="15"></line>
                                </svg>
                            </button>
                        </div>
                    </div>
                `;
            })
            .join("");
    }

    const grid = document.getElementById("categoriesList");

    grid?.addEventListener("click", (e) => {
        const target = e.target as HTMLElement;
        const editBtn = target.closest(".category-edit-btn") as HTMLElement;

        if (editBtn) {
            const id = editBtn.dataset.id;
            console.log(id);

            document
                .getElementById("subCategoryModal")
                ?.classList.add("active");

            const categoryNameInput = document.getElementById(
                "categoryName",
            ) as HTMLInputElement | null;
            const categoryIdInput = document.getElementById(
                "categoryId",
            ) as HTMLInputElement | null;
            if (categoryNameInput && categoryIdInput) {
                const category = window.categoryList.find(
                    (category) => category.idcategoria === Number(id),
                );
                categoryNameInput.value = category?.name || "";
                categoryIdInput.value = category?.idcategoria || "";
            }
        }
    });

    grid?.addEventListener("click", async (e) => {
        const target = e.target as HTMLElement;
        const deleteBtn = target.closest(".category-delete-btn") as HTMLElement;

        if (deleteBtn) {
            const id = deleteBtn.dataset.id;
            console.log(id);

            const { data, error } = await actions.inventario.deleteCategory({
                categoryId: Number(id),
            });

            if (error) {
                console.error("Error al eliminar la categoría:", error);
                return;
            }

            console.log("Categoría eliminada exitosamente:", data);

            window.updateCategoriesList();
        }
    });
</script>

