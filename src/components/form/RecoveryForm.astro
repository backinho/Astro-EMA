<div class="bg-inherit transition-all duration-300">
    <div class="text-center mb-8">
        <h2 class="text-2xl font-bold text-primary mb-2">Recuperar Contraseña</h2>
        <p class="text-sm text-secondary leading-6">
            Te enviaremos un enlace para restablecer tu contraseña
        </p>
    </div>

    <form class="flex flex-col gap-(--spacing-lg)" id="recoveryForm">
        <div class="flex flex-col gap-(--spacing-sm)">
            <label class="text-sm font-semibold text-primary">Correo electrónico</label>
            <div class="relative flex items-center">
                <svg
                    class="absolute left-4 w-[18px] h-[18px] text-muted z-1 transition-colors stroke-2"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"
                    ></path>
                </svg>
                <input
                    type="email"
                    id="recoveryEmail"
                    name="recoveryEmail"
                    class="form-input"
                    placeholder="tu@email.com"
                    required
                />
            </div>
            <div class="form-error" id="recoveryEmailError"></div>
        </div>

        <button type="submit" class="inline-flex items-center justify-center gap-4 px-8 py-4 text-sm font-medium cursor-pointer transition-all duration-200 no-underline whitespace-nowrap rounded-md text-white bg-blue-500 hover:bg-blue-700 hover-lift">
            <svg class="w-4 h-4 stroke-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            Enviar enlace de recuperación
        </button>
    </form>

    <div class="text-center mt-(--spacing-xl) pt-(--spacing-lg) border-t border-(--border-color)">
        <p class="text-sm text-secondary">
            ¿Recordaste tu contraseña?
            <button id="loginBtn" type="button" class="bg-none border-none text-blue-400 text-sm font-medium cursor-pointer transition-all duration-200 no-underline p-0 hover:text-primary-dark hover:underline">
                Volver al inicio de sesión
            </button>
        </p>
    </div>
</div>

<script>

    const recoveryBtn = document.getElementById("loginBtn");

    recoveryBtn?.addEventListener("click", () => {
        const loginDiv = document.getElementById("loginDiv");
        const recoveryDiv = document.getElementById("recoveryDiv");

        if (loginDiv && recoveryDiv) {
            loginDiv.style.display = "block";
            recoveryDiv.style.display = "none";
        }
    })
</script>

